{
  "name": "CheapGPT",
  "description": "Chrome Extension for Using ChatGPT API",
  "version": "1.2.2",
  "manifest_version": 3,
  "options_page": "dist/options.html",
  "action": {
    "default_popup": "dist/index.html",
    "default_icon": "icon.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E"
      }
    }
  },
  "host_permissions": [
    "*://*/*"
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ]
}